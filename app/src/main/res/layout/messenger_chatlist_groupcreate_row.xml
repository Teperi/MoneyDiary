<?xml version="1.0" encoding="utf-8"?>


<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/messenger_chatlist_groupcreate_row_profileCircleImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:layout_gravity="start|center_vertical"
                android:src="@drawable/cat3"
                android:layout_row="0"
                android:layout_column="0"
                />

            <TextView
                android:id="@+id/messenger_chatlist_groupcreate_row_profileNicknameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_margin="4dp"
                android:maxWidth="250dp"
                android:text="John Doe"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_row="0"
                android:layout_column="1"
                />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/messenger_chatlist_groupcreate_row_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_margin="4dp"
                android:layout_row="0"
                android:layout_column="2"
                />

        </GridLayout>

    </android.support.design.card.MaterialCardView>
