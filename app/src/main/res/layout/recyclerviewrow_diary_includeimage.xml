<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="날짜 : "
            android:textSize="15sp"
            android:layout_row="0"
            android:layout_column="0"/>

        <TextView
            android:id="@+id/diary_re_date_inImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="2018-10-25"
            android:textSize="15sp"
            android:layout_row="0"
            android:layout_column="1"
            />

        <TextView
            android:id="@+id/diary_re_title_inImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="고양이"
            android:textSize="30sp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="3"

            />

        <ImageView
            android:id="@+id/diary_re_image_inImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="100dp"
            android:adjustViewBounds="true"
            android:layout_margin="16dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/diary_re_content_inImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:maxLines="3"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="3"

            android:text="오늘은 이쁜 고양이가 내 곁에 찾아왔다."/>

    </GridLayout>

</android.support.v7.widget.CardView>
