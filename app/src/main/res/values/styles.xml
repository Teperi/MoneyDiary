<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- 기본 색상 지정 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>

        <!--Action mode style-->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionMenuTextColor">@color/colorBackground</item>
        <item name="actionModeBackground">@color/colorAccent</item>
    </style>

    <style name="style_tabButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="style_Button_accent" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@color/colorBackground</item>
    </style>

    <style name="style_Button_save" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="colorPrimary">@color/colorGreen</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="stylePopupMenu" parent="ThemeOverlay.MaterialComponents">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@color/colorBackground</item>
    </style>


    <!--상단 툴바 스타일 지정-->
    <style name="styleAppBar" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorBackground</item>
        <item name="android:textColorPrimary">@color/colorBackground</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!--가입 창 스타일-->

    <style name="style_signTitle">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>



    <!--가계부 입력창 스타일-->
    <!--수입, 지출, 입력, 수정 모두 사용가능하게 만들 예정-->

    <!--입력창 내 LinearLayout 스타일 설정-->
    <!--가운데 정렬, 가로 쓰기-->
    <style name="InputLinearLayoutStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <!--입력창 내 소제목 스타일-->
    <!--글씨크기 20sp, 마진 10dp-->
    <style name="style_InputSubclassText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <!--입력창 내 입력값 받는 부분 스타일-->
    <!--글씨크기 15sp, 줄 수 13-->
    <!--추후 구현필요 기능 : 1줄 제한-->
    <style name="InputSubclassEditTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:ems">13</item>
    </style>


</resources>
